                android:layout_height="@dimen/margin_32_dp"
                android:layout_margin="@dimen/margin_8_dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/view_right4_rvState"
                app:layout_constraintTop_toBottomOf="@id/view_middle_rvState"
                tools:text="11" />

            <View
                android:id="@+id/view_right11_rvState"
                android:layout_width="2dp"
                android:layout_height="54dp"
                android:layout_marginLeft="@dimen/margin_8_dp"
                android:background="@color/black"
                app:layout_constraintLeft_toRightOf="@id/btn_state11_rvState"
                app:layout_constraintTop_toBottomOf="@id/view_middle_rvState" />

            <Button
                android:id="@+id/btn_state12_rvState"
