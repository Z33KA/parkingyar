                android:layout_width="@dimen/margin_42_dp"
                android:layout_height="@dimen/margin_32_dp"
                android:layout_margin="@dimen/margin_8_dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <View
                android:id="@+id/view_right1_rvState"
                android:layout_width="2dp"
                android:layout_height="54dp"
                android:layout_marginLeft="@dimen/margin_8_dp"
                android:background="@color/black"
                app:layout_constraintLeft_toRightOf="@id/btn_state1_rvState"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_state2_rvState"
