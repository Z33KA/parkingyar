<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="270dp"
    android:layout_margin="4dp"
    android:padding="@dimen/margin_8_dp">

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="@dimen/margin_8_dp"
        app:cardElevation="@dimen/margin_4_dp"
        android:id="@+id/cardview_rvParking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgView_rvParking"
                android:layout_width="@dimen/with_edit_text_128_dp"
                android:layout_height="84dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:src="@drawable/omomi1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/txtView_nameParking_rvParking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_margin="@dimen/margin_4_dp"
                android:gravity="center"

                android:textSize="@dimen/font_size_title_11_sp"
                app:layout_constraintTop_toBottomOf="@id/imgView_rvParking"
                tools:text="name parking" />

            <TextView
                android:id="@+id/txtView_titleTime_rvParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4_dp"
                android:text="ساعت کاری: "

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_nameParking_rvParking" />

            <TextView
                android:id="@+id/txtView_time_rvParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4_dp"
                tools:text="24 ساعته"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_nameParking_rvParking" />

            <TextView
                android:id="@+id/txtView_titleFloors_rvParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4_dp"
                android:text="تعداد طبقات: "

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_titleTime_rvParking" />

            <TextView
                android:id="@+id/txtView_floors_rvParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4_dp"
                tools:text="3"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_titleTime_rvParking" />

            <TextView
                android:id="@+id/txtView_titleTotalState_rvParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4_dp"
                android:text="تعداد کل جایگاه: "

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_titleFloors_rvParking" />

            <TextView
                android:id="@+id/txtView_totalState_rvParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4_dp"
                android:text="90"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_titleFloors_rvParking" />

            <TextView
                android:id="@+id/txtView_titleTotalStateFree_rvParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4_dp"
                android:text="تعداد جایگاه خالی: "

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_titleTotalState_rvParking" />

            <TextView
                android:id="@+id/txtView_totalStateFree_rvParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4_dp"
                android:text="90"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_titleTotalState_rvParking" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_32_dp"
                style="@style/Button_Style_BG_Blue_Then_Whit"
                android:id="@+id/btn_selectParking_rvParking"
                android:layout_margin="@dimen/margin_8_dp"
                app:layout_constraintTop_toBottomOf="@id/txtView_totalStateFree_rvParking"
                android:text="انتخاب"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_8_dp"
        app:layout_constraintTop_toBottomOf="@+id/cardview_rvParking"/>
</androidx.constraintlayout.widget.ConstraintLayout>